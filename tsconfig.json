{
  "compilerOptions": {
    // changing target also changes the default value of lib
    "target": "es5",
    // set of type definitions
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // allow JavaScript files to be imported inside your project
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    // Types should go into this directory.
    "outDir": "dist",
    // Skip type checking of declaration files.
    "skipLibCheck": true,
    // enables a wide range of type checking behavior
    "strict": true,
    // TypeScript will issue an error if a program tries to include a file by a casing different from the casing on disk
    "forceConsistentCasingInFileNames": true,
    // do not emit compiler output files like JavaScript source code, source-maps or declarations.
    "noEmit": false,
    // fix some problems in the code transpiled by TypeScript.
    "esModuleInterop": true,
    // sets the module system for the program
    "module": "esnext",
    // specify the module resolution strategy
    "moduleResolution": "node",
    // allows importing modules with a ‘.json’ extension
    "resolveJsonModule": true,
    // warn you if you write certain code that can’t be correctly interpreted by a single-file transpilation process
    "isolatedModules": true,
    // controls how JSX constructs are emitted in JavaScript files
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@data/*": [
        "app/data/*"
      ],
      "@hooks/*": [
        "app/hooks/*"
      ],
      "@actions/*": [
        "app/store/actions/*"
      ],
      "@context/*": [
        "app/store/context/*"
      ],
      "@providers/*": [
        "app/store/providers/*"
      ],
      "@reducers/*": [
        "app/store/reducers/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@containers/*": [
        "app/containers/*"
      ],
      "@api/*": [
        "app/api/*"
      ],
      "@lib/*": [
        "app/lib/*"
      ],
      "@screens/*": [
        "app/screens/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./app/types"
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app/**/*.stories.@(js|jsx|ts|tsx)",
    "app/**/*.stories.mdx"
  ]
}
